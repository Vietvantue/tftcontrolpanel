<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/toggleButton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 1"
            android:textOff="Preset 1"
            android:text=""
            android:button="@android:color/transparent"
            android:textSize="@dimen/_16sdp" />

        <ToggleButton
            android:id="@+id/toggleButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 2"
            android:textOff="Preset 2"
            android:text=""
            android:textSize="@dimen/_16sdp" />

        <ToggleButton
            android:id="@+id/toggleButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 3"
            android:textOff="Preset 3"
            android:text=""
            android:textSize="@dimen/_16sdp" />

        <ToggleButton
            android:id="@+id/toggleButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 4"
            android:textOff="Preset 4"
            android:text=""
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_previous_page_preset"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:adjustViewBounds="true"
            android:src="@drawable/left_button" />

        <ImageView
            android:id="@+id/btn_next_page_preset"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/right_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ToggleButton
            android:id="@+id/toggleButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 5"
            android:textOff="Preset 5"
            android:text=""
            android:textSize="@dimen/_16sdp" />

        <ToggleButton
            android:id="@+id/toggleButton6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 6"
            android:textOff="Preset 6"
            android:text=""
            android:textSize="@dimen/_16sdp" />

        <ToggleButton
            android:id="@+id/toggleButton7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 7"
            android:textOff="Preset 7"
            android:text=""
            android:textSize="@dimen/_16sdp" />

        <ToggleButton
            android:id="@+id/toggleButton8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="2"
            android:background="@drawable/selector_preset_bg"
            android:gravity="center"
            android:textOn="Preset 8"
            android:textOff="Preset 8"
            android:text=""
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>
</LinearLayout>